#include <stdio.h>

void printDigit(int n){
    int digit = n%10;
    if(n/10!=0){
        printDigit(n/10);
    }
    printf("%d ", digit);
}
void printDigitReverse(int n){
    int digit = n%10;
    printf("%d ", digit);
    if(n/10!=0){
        printDigitReverse(n/10);
    }
}
int main(){

    int N;
    printf("Введите N:");
    scanf("%d", &N);

    printf("Первое:");
    printDigit(N);
    printf("\n");

    printf("Второе:");
    printDigitReverse(N);

    return 0;
}
